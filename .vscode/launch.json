	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Client",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/client_debug",
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"externalConsole": false,
			"MIMode": "lldb",
			"preLaunchTask": "Build Debug"
		},
		{
			"name": "Debug Server",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/server_debug",
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"externalConsole": false,
			"MIMode": "lldb",
			"preLaunchTask": "Build Debug"
		},
	]
}